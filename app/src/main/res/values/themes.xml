<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrafficPro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/main</item>
        <item name="colorAccent">@color/main</item>
        <item name="android:statusBarColor">@color/main</item>
        <item name="actionOverflowButtonStyle">@style/OptionMenu</item>
        <item name="android:navigationBarColor">@color/main</item>

    </style>

    <style name="Theme.TrafficPro" parent="Base.Theme.TrafficPro" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="item_selector" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#080809</item>
    </style>

    <style name="OptionMenu" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>


    <style name="popup" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="image" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>